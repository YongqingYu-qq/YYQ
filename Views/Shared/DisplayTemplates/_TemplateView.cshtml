@model IEnumerable<WebApplication_Core_mvc.Models.ViewModel1>
<table class="table-bordered">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            MyValue
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            @if(item.IsDisplayable)
            {
                <td>
                    @Html.DisplayFor(model => item.MyValue)
                </td>
            }
        </tr>
    }
</table>

