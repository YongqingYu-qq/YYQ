
@model IEnumerable<WebApplication_Core_mvc.Models.ViewModel1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@Html.DisplayForModel("_TemplateView")
<div class="card-deck">
    @foreach (var user in Model)
    {
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">

            <div class="card-header">
                <h5>@user.Id</h5>
            </div>

            <div class="card-body">
                <h2>@user.Name</h2>
            </div>


            <div class="card-footer text-center">
                <a asp-controller="Default" asp-action="showprofile" asp-route-id="@user.Id"
                   class="btn btn-primary">ShowProfile</a>
            </div>
        </div>
    }
</div>

